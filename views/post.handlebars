<div class="row">
    <div class="col s12 m8 offset-m2 center-align">
        <div class="card blue-grey darken-1">
            <div class="card-content white-text">
                <h2 class='text-primary'><span class="card-title">{{title}}
                        {{#if edited}} <span class="edited">(edited)</span>
                        {{/if}}</span></a>
                </h2>
                <p>{{text}}</p>

            </div>
            <div class="card-action">
                <p>{{user.user_name}} on {{format_date createdAt}}</p>
            </div>

        </div>
    </div>
</div>

<div class="row">
    <form class="col s12">
        <div class="row">

            {{!-- {{#if logged_in --}}
            <div class="input-field col s12">
                <textarea id="comment-text" class="materialize-textarea" data-length="3000"></textarea>
                <label for="comment-text">Add a comment!</label>
            </div>
        </div>
        <button id="submit-btn" class="btn waves-effect waves-light center-align" type="submit" name="action">Add
            comment
            <i class="material-icons right"></i>
        </button> {{!-- {{else --}} {{!-- <h5 class="center-align">You must be <a href="/login">logged in</a>to comment!
        </h5> --}}
        {{!-- {{/if --}}

    </form>
</div>

{{#each Comments as |comment|}}

<div class="row">
    <div class="col s12 m8 offset-m2 center-align">
        <div class="card blue-grey darken-1">
            <div class="card-content white-text comment-author">

                <p> {{body}}

                <div class="card-action comment-author grey-text">
                    <p>>>{{user.user_name}} on {{format_date comment.createdAt}}</p>
                </div>
                </p>

            </div>


        </div>
    </div>
</div>

{{/each}}

