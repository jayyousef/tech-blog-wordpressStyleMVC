<div class="row">
    <div class="col s12 m8 offset-m2 center-align">
        <div class="card blue-grey darken-1">
            <div class="card-content white-text">
                <h2 class='text-primary'><span class="card-title">{{title}}
                        {{#if edited}} <span class="edited">(edited)</span>
                        {{/if}}</span></a>
                </h2>
                <p>{{body}}</p>

            </div>
            <div class="card-action">
                <p>{{user.user_name}} on {{format_date createdAt}}</p>
            </div>

        </div>
    </div>
</div>

<div class="row">
    <form class="col s12">
        <div class="row">

            {{#if logged_in}}
            <div class="input-field col s12">
                <textarea id="comment-text" class=""></textarea>
                <label for="comment-text">Add a comment!</label>
            </div>
        </div>
        <button id="submit-btn" class="button" type="submit">Comment
        </button>
        {{/if}}
</form>
</div>
