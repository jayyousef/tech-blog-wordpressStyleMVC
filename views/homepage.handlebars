<!-- Loop over each object in the projects array -->
{{#each blogs as |post| }}
<div class="row mb-4 project">
  <div class="card col-md-5">
    <h2>
      <a href="/posts/{{id}}">{{title}}</a>
    </h2>
    <hr>
    <p>{{body}}</p>
    <hr>
    <p>Created by {{user.user_name}} on {{format_date createdAt}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{post.description}}
    </p>
  </div>
</div>
{{/each}}
