<div class="row">
  <form class="col s10 center-align">
    <h5 class="center-align">"Edit your post here!"</h5>
    <div class="row">
      <div class="input-field col s10">
        <input id="post_name" type="text" data-length="100" value="{{title}}">
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12">
        <textarea id="post_text" class="materialize-textarea" data-length="5000">{{body}}</textarea>
      </div>
    </div>
    <button class="btn waves-effect waves-light center-align" id="submit-btn" type="submit" name="action">Update post!
    </button>
  </form>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
<script src="../js/edit-post.js"></script>