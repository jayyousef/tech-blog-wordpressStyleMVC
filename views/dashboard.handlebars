{{#if logged_in}}
<h5 class="mt-4 center-align text-light">Welcome {{user_name}}! {{{get_emoji }}} <span class='joke-text'> </span></h5>

<hr>
{{!-- Displays all the users posts in cards --}}

{{#each blog_posts as |posts|}}
<div id="posts-container" class="mt-3 mb-5 d-flex align-items-center justify-content-center" style="max-width: 100%;">
    <div class="card p-2 radial-bg" style="">
        <div class="">
            <div class="">
                <h2><a href="/posts/{{posts.id}}"> <span class="">{{posts.title}} {{#if edited}} (edited)
                            {{/if}}</span></a></h2>
                <p>{{posts.body}}</p>
            </div>
            <div class="">
                <p>Created on {{format_date posts.createdAt}}</p>
            </div>
        </div>
        <button data-edit-id="{{posts.id}}" class="btn btn-info" type="button" name="action">Edit
        </button>
        <button data-delete-id="{{posts.id}}" class="btn btn-danger" type="button" name="action">Delete
        </button>
    </div>
</div>

{{/each}}

{{!-- button to create a new post --}}
<div class="mt-1 mb-3 d-flex align-items-center justify-content-center">
    <button id="new-post" class="btn btn-info center" type="button" name="action">Create a New Post</button>
</div>

{{!-- NEW POST FORM - display = none, reveals when clicks the "CREATE NEW POST BUTTON" --}}
<div id="new-post-div" style="display: none;">
    <div class="card mt-3 mb-5 d-flex">
        <form class="">

            <div class="form-group">

                <h5 class="text-center">Create a new post here!</h5>

                <div class="mt-2 mb-2">

                    <label for="post_name"></label>
                    <input class="p-4 form-control form-control-lg" placeholder="Your Post Title" id="post_name"
                        type="text">

                </div>

                <div class="">

                    <label for="post_text">
                    </label>
                    <textarea id="post_text" class="form-control form-control-md" placeholder="Your Post Body Here--
Better to remain silent and be thought a fool than to speak out and remove all doubt."></textarea>

                </div>

                <button class="btn btn-primary mt-3 ml-3 pl-3" id="submit-btn" type="submit"
                    name="action">Submit</button>

            </div>

        </form>
    </div>
</div>

{{else}}

<h6 class="center-align">You must be <a href="/login">logged in</a> to view the dashboard.</h6>

{{/if}}


<script src="/js/dashboard.js"></script>